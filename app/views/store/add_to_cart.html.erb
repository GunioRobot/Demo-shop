<div class="cart-title">Your cart</div>
<table>
  <% for item in @cart.items %>
    <tr>
      <td><%= item.quantity %>&times;</td>
      <td><%= item.title%></td>
      <td class="item-price"><%= number_to_currency(item.price)%></td>
    </tr>
  <% end %>
  
  <tr class="total-line">
    <td colspan="2">Total</td>
    <td class="total-cell"><%= number_to_currency(@cart.total_price)%>
  </tr>
</table>
<%= button_to('Empty cart',empty_cart_store_index_path, :method => :delete)%>