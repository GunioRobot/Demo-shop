<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN"
                      "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html>
<head>
  <title>Online Store</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body id="store">
  <div id="banner">
    <%= link_to image_tag('/images/ca-logo-img.png'), store_index_path %>
    <%= @page_title || "Online store"%>
    <% if session[:user_id].blank? %>
      <div class="login">
        <%= link_to('Admin',new_session_path)%>
      </div>
    <% end %>
  </div>
  <div id="columns">
    <div id="side">
      <%= hidden_div_if(@cart.nil? || @cart.items.empty?, :id => "cart") do %>
        <%= render(:partial => 'store/cart', :object => @cart)%>
      <% end %>
      <% if session[:user_id] %>
        <br />
        <div class="admin">
          <%= link_to("Orders", orders_path)%><br />
          <%= link_to("Products", products_path)%><br />
          <%= link_to("Users", users_path)%><br />
          <br />
          <%= button_to('Logout',logout_session_index_path,:method => 'get')%>
        </div>
      <% end %>
    </div>
  <div id="main">
    <% if flash[:notice] %>
      <div id="notice"><%= flash[:notice]%></div>
    <% end %>

    <%= yield :layout %>
  </div>
</body>
</html>
